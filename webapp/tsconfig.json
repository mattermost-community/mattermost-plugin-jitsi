{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "jsx": "react",
    "baseUrl": "./src",
    "types": ["jest", "node"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "!node_modules/@types",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
